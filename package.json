    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.24.1",
    "jest": "29.3.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
